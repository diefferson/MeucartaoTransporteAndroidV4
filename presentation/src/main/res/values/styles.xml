<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="toolbarStyle">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.ToolbarStyle" parent="AppTheme.AppBarOverlay"/>


    <style name="AppTheme.TranslucentStatusBar">
        <item name="elevation">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Extract" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.RedTheme">
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/line_blue</item>
        <item name="colorPrimaryDark">@color/line_blue</item>
        <item name="colorAccent">@color/line_blue</item>
    </style>

    <style name="AppTheme.BlueLight">
        <item name="colorPrimary">@color/line_blue_light</item>
        <item name="colorPrimaryDark">@color/line_blue_light</item>
        <item name="colorAccent">@color/line_blue_light</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/line_red</item>
        <item name="colorPrimaryDark">@color/line_red</item>
        <item name="colorAccent">@color/line_red</item>
    </style>

    <style name="AppTheme.Grey">
        <item name="colorPrimary">@color/line_grey</item>
        <item name="colorPrimaryDark">@color/line_grey</item>
        <item name="colorAccent">@color/line_grey</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">@color/line_green</item>
        <item name="colorPrimaryDark">@color/line_green</item>
        <item name="colorAccent">@color/line_green</item>
    </style>

    <style name="AppTheme.Yellow">
        <item name="colorPrimary">@color/line_yellow</item>
        <item name="colorPrimaryDark">@color/line_yellow</item>
        <item name="colorAccent">@color/line_yellow</item>
    </style>

    <style name="AppTheme.Orange">
        <item name="colorPrimary">@color/line_orange</item>
        <item name="colorPrimaryDark">@color/line_orange</item>
        <item name="colorAccent">@color/line_orange</item>
    </style>

    <style name="AppTheme.White">
        <item name="colorPrimary">@color/line_white</item>
        <item name="colorPrimaryDark">@color/line_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Ccd">
        <item name="colorPrimary">@color/line_ccd</item>
        <item name="colorPrimaryDark">@color/line_ccd</item>
        <item name="colorAccent">@color/line_ccd</item>
    </style>

    <style name="AppTheme.Blue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BlueLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Red.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Grey.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Yellow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Orange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.White.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Ccd.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.TextTitle">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextTitleNormal">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextCategory">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="AppTheme.TextSimple">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.SettingsItem">
        <item name="android:padding">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SettingsValue">
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.InputLayout">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/normalButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/normalButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Schedule">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="cardBackgroundColor">?colorAccent</item>
    </style>


    <style name="placeholderField">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:background">#dddddd</item>
    </style>

</resources>
