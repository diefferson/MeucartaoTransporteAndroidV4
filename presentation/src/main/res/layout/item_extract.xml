<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <Space
        android:id="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/timeLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        tools:src="@drawable/ic_extract_bus_stop"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/extract_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Terminal CapÃ£o Raso"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/extract_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="18/07/2016 18:06:38"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/extract_place"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/extract_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="R$44,75"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/extract_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="R$-3,70"
        android:textSize="12sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/extract_date"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/extract_value"/>


</android.support.constraint.ConstraintLayout>
