<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_black"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            tools:text="Nome Cartao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            android:visibility="gone"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/card_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="R$54.00"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updated"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/card_balance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            tools:text="15/07/2016 19:08:00"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/refresh_white"
        android:layout_margin="6dp"
        android:contentDescription="@string/update"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_black"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="@string/updating" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_black"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="@string/card_not_found" />

    </RelativeLayout>

</RelativeLayout>