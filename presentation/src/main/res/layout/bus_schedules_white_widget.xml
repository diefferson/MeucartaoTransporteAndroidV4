<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/line_code"
                tools:text="350"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_black"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/line_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nome Linha"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textGrey"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/bus_stop_black"/>

            <TextView
                android:id="@+id/bus_stop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                tools:text="Nome Ponto"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="9sp"
                android:gravity="center_vertical"
                android:textColor="@color/textGrey"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bus_schedule_one"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/card_background_black"
                tools:text="18:20"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="2dp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/bus_schedule_two"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/card_background_black"
                android:textSize="10sp"
                tools:text="18:20"
                android:layout_margin="2dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="2dp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/bus_schedule_three"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/card_background_black"
                android:textSize="10sp"
                tools:text="18:20"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noSchedules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/empty_schedules"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textGrey"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_widget_base_view_white"/>

</RelativeLayout>